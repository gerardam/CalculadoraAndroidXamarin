<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#01579B" />
      <stroke
          android:width="0dp" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
        android:color="#D32F2F" />
      <stroke
          android:width="0dp" />
      <corners
          android:radius="0dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
</selector>